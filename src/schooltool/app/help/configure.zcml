<configure
     xmlns:zcml="http://namespaces.zope.org/zcml"
     xmlns:help="http://namespaces.zope.org/help"
     zcml:condition="have context-help" >

<help:register
     id="calendaring"
     title="Calendaring"
     doc_path="calendaring.pt"
     class="zope.app.onlinehelp.onlinehelptopic.ZPTOnlineHelpTopic"
     />

<help:register
     parent="calendaring"
     id="daily_calendar"
     title="Daily Calendar"
     doc_path="daily_calendar.pt"
     for="schooltool.app.interfaces.ISchoolToolCalendar"
     class="zope.app.onlinehelp.onlinehelptopic.ZPTOnlineHelpTopic"
     view="daily.html" 
     />

<help:register
     parent="calendaring"
     id="weekly_calendar"
     title="Weekly Calendar"
     doc_path="weekly_calendar.pt"
     for="schooltool.app.interfaces.ISchoolToolCalendar"
     class="zope.app.onlinehelp.onlinehelptopic.ZPTOnlineHelpTopic"
     view="weekly.html" 
     />

</configure>