<div i18n:domain="schooltool">
  <h3>
    <metal:block i18n:translate="">Calendar</metal:block>
    <a class="modify" href="" title="Edit calendar settings"
       tal:attributes="href string:${context/@@absolute_url}/site-preferences.html"
       i18n:attributes="title">
      <img tal:attributes="src context/++resource++schooltool.skin.flourish/edit-icon.png"
           alt="Edit"
           i18n:attributes="alt" />
    </a>
  </h3>
  <table class="form-fields"
         tal:define="settings view/settings">
    <tbody>
      <tr>
        <td class="label" i18n:translate="">Front Page Calendar</td>
        <td tal:content="settings/frontPageCalendar">Name</td>
      </tr>
      <tr>
        <td class="label" i18n:translate="">Time Zone</td>
        <td tal:content="settings/timezone">Name</td>
      </tr>
      <tr>
        <td class="label" i18n:translate="">Time Format</td>
        <td tal:content="settings/timeformat">Name</td>
      </tr>
      <tr>
        <td class="label" i18n:translate="">Date Format</td>
        <td tal:content="settings/dateformat">Name</td>
      </tr>
      <tr>
        <td class="label" i18n:translate="">Week starts on</td>
        <td tal:content="settings/weekstart">Name</td>
      </tr>
    </tbody>
  </table>
</div>
