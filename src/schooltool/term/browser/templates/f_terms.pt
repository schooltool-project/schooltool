<div i18n:domain="schooltool">
  <form method="post" tal:attributes="action request/getURL">
    <table>
      <thead>
        <tr>
          <th i18n:translate="">Term</th>
          <th i18n:translate="">First Day</th>
          <th i18n:translate="">Last Day</th>
        </tr>
      </thead>
      <tal:block repeat="year view/years" >
        <tr>
          <th colspan="3">
            <tal:block content="year/obj/title" />
            (<tal:block content="year/first/@@mediumDate" /> -
            <tal:block content="year/last/@@mediumDate" />)
            <input type="image" value="1" title="Add New Term"
                   tal:attributes="name year/add;
                                   src context/++resource++schooltool.skin.flourish/add-icon.png"
                   i18n:attributes="title" />
          </th>
        </tr>
        <tr tal:condition="year/empty">
          <td colspan="3" i18n:translate="">This year has no terms defined.</td>
        </tr>
        <tr tal:condition="not: year/empty"
            tal:repeat="term year/terms">
          <td>
            <a tal:replace="structure term/@@link" />
          </td>
          <td>
            <tal:block content="term/first/@@mediumDate" />
          </td>
          <td>
            <tal:block content="term/last/@@mediumDate" />
          </td>
        </tr>
      </tal:block>
    </table>
  </form>
</div>

