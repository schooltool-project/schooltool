<metal:block i18n:domain="schooltool">
  <h3>
    <metal:block i18n:translate="">
      Contact information
    </metal:block>
    <a class="modify" href="" title="Edit this contact"
       tal:attributes="href string:${context/@@absolute_url}/edit.html"
       i18n:attributes="title"
       tal:condition="view/canModify">
      <img tal:attributes="src context/++resource++schooltool.skin.flourish/edit-icon.png"
           alt="Edit"
           i18n:attributes="alt" />
    </a>
  </h3>
  <table class="form-fields">
    <tbody>
      <tal:loop repeat="widget view/widgets/values">
        <tr tal:condition="widget/value">
          <td tal:content="widget/label" class="label"/>
          <td tal:content="structure widget/render" />
        </tr>
      </tal:loop>
      <tr tal:repeat="info view/relationships">
        <td class="label">
          <label>
            <span tal:condition="info/relationship" i18n:translate="">
              <tal:block tal:replace="info/getRelationshipTitle" i18n:name="relationship" />
              of
            </span>
            <span tal:condition="not:info/relationship" i18n:translate="">
              Contact of
            </span>
          </label>
        </td>
        <td>
          <div class="widget">
            <span>
              <a tal:replace="structure info/__parent__/schooltool:content/link" />
            </span>
          </div>
        </td>
      </tr>
    </tbody>
  </table>
</metal:block>
