<div class="manage-view" i18n:domain="schooltool"
     tal:condition="view/has_schoolyear"
     tal:define="resource_types view/resource_types;
                 resources_link string:${context/@@absolute_url}/resources">
  <h3>
    <metal:block i18n:translate="">
      Resources
    </metal:block>
    <a class="modify" href="" title="Manage resources"
       tal:attributes="href resources_link"
       i18n:attributes="title"
       i18n:translate="">
      <img tal:attributes="src context/++resource++schooltool.skin.flourish/edit-icon.png"
           alt="Edit"
           i18n:attributes="alt" />
    </a>
  </h3>
  <table>
    <thead>
      <tr>
        <th i18n:translate="">School Resources</th>
        <th i18n:translate="">Total</th>
      </tr>
    </thead>
    <tbody>
      <tr tal:condition="not:resource_types">
        <td colspan="2" i18n:translate="">
          There are no
          <a tal:attributes="href resources_link">school resources</a> set up.
        </td>
      </tr>
      <tr tal:repeat="resource resource_types/values">
        <td>
          <a tal:content="resource/title"
             tal:attributes="href string:${resources_link}/?SEARCH_TYPE=${resource/id}">
            [link]
          </a>
        </td>
        <td tal:content="resource/amount">
          [number]
        </td>
      </tr>
    </tbody>
  </table>
</div>
