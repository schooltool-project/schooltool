<div i18n:domain="schooltool">
  <h2 i18n:translate="">Advisory</h2>
  <div>
    <div>
      <h3 i18n:translate="">
        Advisors
        <a class="modify" href="" title="Manage this person's advisors"
           tal:attributes="href string:${context/@@absolute_url}/@@advisors.html"
           i18n:attributes="title"
           tal:condition="view/canModify">
          <img tal:attributes="src context/++resource++schooltool.skin.flourish/edit-icon.png"
               alt="Edit"
               i18n:attributes="alt" />
        </a>
      </h3>
      <div tal:condition="python: len(list(view.context.advisors))"
           tal:replace="structure view/advisors_table/render" />
      <h3 tal:condition="python: not len(list(view.context.advisors))"
         i18n:translate="">
        The person has no advisors.
      </h3>
    </div>
    <div>
      <h3 i18n:translate="">
        Advisees
        <a class="modify" href="" title="Manage this person's advisees"
           tal:attributes="href string:${context/@@absolute_url}/@@advisees.html"
           i18n:attributes="title"
           tal:condition="view/canModify">
          <img tal:attributes="src context/++resource++schooltool.skin.flourish/edit-icon.png"
               alt="Edit"
               i18n:attributes="alt" />
        </a>
      </h3>
      <div tal:condition="python: len(list(view.context.advisees))"
           tal:replace="structure view/advisees_table/render" />
      <h3 tal:condition="python: not len(list(view.context.advisees))"
         i18n:translate="">
        The person has no advisees.
      </h3>
    </div>
  </div>
</div>
