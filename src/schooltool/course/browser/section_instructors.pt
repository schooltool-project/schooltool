<tal:defs define="update view/update" />
<html metal:use-macro="view/@@standard_macros/page" i18n:domain="schooltool">
<head>
  <title metal:fill-slot="title" tal:content="context/title" />
</head>
<body>
<metal:block metal:fill-slot="body"
             tal:define="batch view/batch">

<form method="post" tal:attributes="action request/URL" class="standalone">
<h3 i18n:translate="">
  Instructors
</h3>
<fieldset tal:define="instructors view/getCurrentInstructors">
  <tal:if condition="instructors">
    <legend i18n:translate="">Current Instructors</legend>
    <div tal:repeat="instructor instructors/sortby:title">
      <label>
        <input tal:attributes="name string:remove_instructor.${instructor/__name__}"
          type="checkbox" />
        <span tal:replace="instructor/title" />
      </label>
    </div>
    <div class="controls">
      <input type="submit" class="button-ok" name="REMOVE_INSTRUCTORS"
        value="Remove"
        title="Shortcut: Alt-R" accesskey="R"
        i18n:attributes="value; accesskey" />
    </div>
  </tal:if>
  <p tal:condition="not:instructors" i18n:translate="">
    There are none.
  </p>
</fieldset>
<fieldset>
  <legend i18n:translate="">Available Instructors</legend>
  <div class="instructor_list">
  <tal:if tal:condition="batch">
    <tal:if condition="request/SEARCH|nothing">
      <tal:block define="extra_url python:'&SEARCH=%s' % request.get('SEARCH')">
        <div metal:use-macro="view/@@batch_macros/batch-navigation"/>
      </tal:block>
    </tal:if>
    <tal:if condition="not:request/SEARCH|nothing">
      <div metal:use-macro="view/@@batch_macros/batch-navigation"/>
    </tal:if>
  </tal:if>
    <input type="text" name="SEARCH"
      tal:attributes="value request/SEARCH|nothing"/>
    <input type="submit" name="SEARCH_BUTTON" value="Find Now"
      i18n:attributes="value"/>
    <input type="submit" name="CLEAR_SEARCH" value="Clear"
      i18n:attributes="value"/>
    <div tal:repeat="instructor batch" tal:condition="batch">
      <label>
        <input tal:attributes="name string:add_instructor.${instructor/__name__}"
               type="checkbox" />
        <span tal:replace="instructor/title" />
      </label>
    </div>
    <div class="controls">
      <input type="submit" class="button-ok" name="ADD_INSTRUCTORS"
        value="Add" tal:condition="batch"
        title="Shortcut: Alt-A" accesskey="A"
        i18n:attributes="value; accesskey" />
    </div>
    <p tal:condition="not:batch" i18n:translate="">
      There are none to add.
    </p>
  </div>
</fieldset>

<div class="controls">
  <input type="submit" class="button-cancel" name="CANCEL" value="Cancel"
         i18n:attributes="value cancel-button" />
</div>
</form>

</metal:block>
</body>
</html>
