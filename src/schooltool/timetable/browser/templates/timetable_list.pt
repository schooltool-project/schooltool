<html metal:use-macro="view/@@standard_macros/page" i18n:domain="schooltool">
<head>
  <title metal:fill-slot="title" i18n:translate="">
    Timetables for <span i18n:name="object"
                         tal:replace="context/__parent__/@@link" />
  </title>
</head>
<body>

<h1 metal:fill-slot="content-header" i18n:translate="">
  Timetables for <span i18n:name="object"
                       tal:replace="context/__parent__/@@link" />
</h1>

<metal:block metal:fill-slot="body">
  <div class="info-block">
    <h3>Timetables</h3>
    <form tal:attributes="action request/URL" method="get">
        <ul>
          <li tal:repeat="timetable context/values">
            <input type="checkbox" tal:attributes="name
            timetable/__name__" value="delete"/>
  	  <a tal:attributes="href timetable/@@absolute_url"
               tal:content="timetable/__name__">some.timetable</a>
	  </li>
        </ul>
      <div class="controls">
        <input class="button-ok" type="submit" name="DELETE" value="Delete"
               i18n:attributes="value" />
      </div>  
    </form>
  </div>
</metal:block>
</body>
</html>
