<div tal:define="batch view/table/batch" i18n:domain="schooltool">
  <h3 i18n:translate="">
    Server status: <tal:block replace="view/status" i18n:name="status" />
  </h3>
  <form method="post"
        tal:attributes="action request/URL"
        tal:condition="batch">
    <tal:block replace="structure batch/render" />
    <tal:block replace="structure view/table/render" tal:condition="batch" />
  </form>
  <p tal:condition="not:batch" i18n:translate="">There are no messages queued.</p>
</div>
