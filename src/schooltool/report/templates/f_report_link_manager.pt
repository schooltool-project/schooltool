<div i18n:domain="schooltool">
  <table>
    <thead>
      <tr>
        <th i18n:translate="">Title</th>
        <th i18n:translate="">Description</th>
      </tr>
    </thead>
    <tal:block repeat="group view/table">
      <tr>
        <th colspan="2" i18n:translate="" tal:content="string: ${group/file_type} Reports" />
      </tr>
      <tr tal:repeat="row group/rows">
        <td>
          <metal:block tal:replace='structure string:&lt;script type="text/javascript"&gt;' />
            $(document).ready(function() {
              var link_id = '#<metal:block tal:replace="row/link_id" />';
              var form_id = '#<metal:block tal:replace="row/form_id" />';
              var url = '<metal:block tal:replace="row/url" />';
              $(link_id).click(function(e) {
                call_dialog(url, form_id);
                e.preventDefault();
              });
            });
          <metal:block tal:replace="structure string:&lt;/script&gt;" />

          <a tal:attributes="href row/url;
                             id row/link_id"
             tal:content="row/title" />
          <div tal:attributes="id row/form_id">
          </div>
        </td>
        <td tal:content="row/description" />
      </tr>
    </tal:block>
  </table>
</div>

