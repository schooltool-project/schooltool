<html metal:use-macro="view/macros/page" i18n:domain="schooltool">
  <head>
    <title metal:fill-slot="title" i18n:translate="">
        <span tal:replace="view/title"/>
    </title>
  </head>
  <body>
    <h1 metal:fill-slot="h1" i18n:translate="">
        <span tal:replace="view/title"/>
    </h1>
    <metal:block metal:fill-slot="content">

        <div class="row" tal:repeat="field context/fields">
            <label tal:content="field/label"></label>:
            <i tal:content="field/value"></i>
        </div>

    </metal:block>
  </body>
</html>
