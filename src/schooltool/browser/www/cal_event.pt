<div class="calevent" i18n:domain="schooltool">
  <div class="dellink" tal:condition="view/canEdit">
    <a tal:attributes="href string:delete_event.html?event_id=${view/editId}"
       i18n:translate="">[delete]</a>
  </div>
  <h3>
    <a tal:attributes="href string:edit_event.html?event_id=${view/editId}"
       tal:omit-tag="not:view/canEdit"
       tal:content="context/title">event_title</a>
  </h3>
  <span tal:replace="structure view/duration" />
  <span tal:condition="context/location"
        tal:replace="string:(${context/location})" />
</div>
