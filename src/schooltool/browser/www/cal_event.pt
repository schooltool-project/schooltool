<div class="calevent" tal:define="editable
             python:getattr(context, 'source', None) != 'timetable-calendar'">
  <tal:block condition="editable">
    <div class="dellink">
      <a tal:attributes="href
              string:delete_event.html?event_id=${view/uniqueId}"
         >[delete]</a>
    </div>
    <h3>
      <a tal:attributes="href
              string:edit_event.html?event_id=${view/uniqueId}"
         tal:content="context/title" >
      </a>
    </h3>
  </tal:block>
  <h3 tal:condition="not:editable" tal:content="context/title" />
  <span tal:replace="structure view/duration" />
  <span tal:condition="context/location"
        tal:replace="string:(${context/location})" />
</div>
