<html metal:use-macro="view/macros/page" i18n:domain="schooltool">
<head>
  <title metal:fill-slot="title">
    Teachers for <span tal:replace="context/title"/>
  </title>
</head>
<body>
  <h1 metal:fill-slot="h1" i18n:translate="">
    Teachers for <span tal:replace="context/title"/>
  </h1>
  <metal:block metal:fill-slot="content">

  <div tal:define="status view/update"
       tal:condition="status" tal:content="status" class="status"/>

  <tal:block condition="not:request/args/ADD|nothing">
  <form method="POST"
        tal:attributes="action request/uri"
        tal:define="list view/list">
  <p tal:condition="not:list" i18n:translate="">
    There are no teachers.
  </p>
  <table tal:condition="list">
    <tr>
      <th>&nbsp;</th>
      <th i18n:translate="">Name</th>
    </tr>

    <tr tal:repeat="teacher list">
      <td><input
              type="checkbox" name="CHECK"
              tal:attributes="value teacher/@@path">
      </td>
      <td><a tal:attributes="href teacher/@@absolute_url"
             tal:content="teacher/title"/></td>
    </tr>
  </table>
  <input type="submit" class="button" name="DELETE"
         value="Remove selected teachers"
         tal:condition="list"
         i18n:attributes="value" />
  <input type="submit" class="button" name="ADD"
         value="Add teachers"
         i18n:attributes="value" />
  </form>
  </tal:block>

  <tal:block condition="request/args/ADD|nothing">
  <form method="POST"
        tal:attributes="action request/uri">
  <select name="toadd">
    <option i18n:translate="" value="">Select...</option>
    <option tal:repeat="teacher view/addList"
            tal:attributes="value teacher/@@path"
            tal:content="teacher/title"/>
  </select>
  <input type="submit" class="button" name="FINISH_ADD"
         value="Add teacher"
         i18n:attributes="value" />
  </form>
  </tal:block>

  </metal:block>
</body>
</html>
