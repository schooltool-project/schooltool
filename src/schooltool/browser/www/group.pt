<html metal:use-macro="view/macros/page" i18n:domain="">
<head>
  <title metal:fill-slot="title"><span tal:replace="context/title" />
  </title>
</head>
<body>
<h1 metal:fill-slot="h1"><span tal:replace="context/title" /></h1>
<metal:block metal:fill-slot="content">

  <div class="parentgroups">
    <h3 i18n:translate="">Parent groups</h3>
    <p tal:repeat="parent view/getParentGroups">
     <a tal:attributes="href parent/url" tal:content="parent/title"/>
    </p>
  </div>

  <div class="members">
    <div tal:define="subgroups view/getSubGroups" tal:condition="subgroups">
      <h3 i18n:translate="">Subgroups</h3>
      <p tal:repeat="sub subgroups">
       <a tal:attributes="href sub/url" tal:content="sub/title"/>
      </p>
    </div>
    <div tal:define="members view/getOtherMembers" tal:condition="members">
      <h3 i18n:translate="">Members</h3>
      <p tal:repeat="obj members">
       <a tal:attributes="href obj/url" tal:content="obj/title"/>
      </p>
    </div>
    <div class="actions" tal:condition="view/canEdit">
      <a class="action" tal:attributes="href view/editURL"
         i18n:translate="">Edit</a>
    </div>
  </div>

  <div class="members"
       tal:define="teachers view/teachersList"
       tal:condition="teachers">
    <h3 i18n:translate="">Teachers</h3>
    <p tal:repeat="teacher teachers">
      <a tal:attributes="href python:teacher[2]"
         tal:content="python:teacher[0]"/>
    </p>
    <div class="actions" tal:condition="view/canEdit">
      <a class="action" tal:attributes="href view/teachersURL">Edit</a>
    </div>
  </div>

</metal:block>
</body>
</html>
