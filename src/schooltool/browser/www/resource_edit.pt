<html metal:use-macro="view/macros/page" i18n:domain="schooltool">
<head>
  <title metal:fill-slot="title" i18n:translate="">Edit resource info</title>
</head>
<body>
  <h1 metal:fill-slot="h1" i18n:translate="">
    Edit resource info for <span tal:replace="context/title"/>
  </h1>
  <metal:block metal:fill-slot="content">

  <form method="POST" tal:attributes="action request/path">
    <div class="row"><strong i18n:translate="">Name:</strong>
      <span tal:replace="python:context.__name__">name</span>
    </div>
    <div class="row">
      <label for="title" i18n:translate="">Title</label>
      <input id="title" name="title" type="text"
             tal:attributes="value context/title" />
    </div>
    <div class="buttons">
      <input class="button" type="submit" value="Submit"
             i18n:attributes="value" />
    </div>

  </form>
  </metal:block>
</body>
</html>
