<html metal:use-macro="view/macros/page">
<head>
  <title metal:fill-slot="title">Add person</title>
</head>
<body>

  <h1 metal:fill-slot="h1">
    Add person
  </h1>

  <metal:block metal:fill-slot="content">
  <form method="POST" tal:attributes="action request/path">
    <div class="error" tal:condition="view/error" tal:content="view/error" />
    <div class="row">
      <label class="wide" for="username">Username</label>
      <input id="username" name="username" type="text"
             tal:attributes="value view/prev_username">
    </div>
    <div class="row">
      <label class="wide" for="password">Password</label>
      <input id="password" name="password" type="password" />
    </div>
    <div class="row">
      <label class="wide" for="verify_password">Verify password</label>
      <input id="verify_password" name="verify_password" type="password" />
    </div>
    <div class="buttons">
      <input class="button" type="submit" value="Add" />
    </div>
  </form>
  </metal:block>

</body>
</html>
