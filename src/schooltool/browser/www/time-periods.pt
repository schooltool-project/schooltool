<html metal:use-macro="view/macros/page" i18n:domain="schooltool">
<head>
  <title metal:fill-slot="title" i18n:translate="">
    Time periods
  </title>
</head>
<body>
  <h1 metal:fill-slot="h1" i18n:translate="">
     Time periods
  </h1>
<metal:block metal:fill-slot="content">

<div class="error" tal:define="status view/update"
     tal:condition="status" tal:content="status" />

<form method="POST" tal:attributes="action request/uri"
      tal:define="periods view/list">
  <p tal:condition="not:periods" i18n:translate="">
    There are no time periods defined.
  </p>
  <table tal:condition="periods">
    <tr>
      <th>&nbsp;</th>
      <th i18n:translate="">Name</th>
    </tr>

    <tr tal:repeat="item periods">
      <td><input
              type="checkbox" name="CHECK"
              tal:attributes="value item/__name__">
      </td>
      <td><a tal:attributes="href item/@@absolute_url"
             tal:content="item/__name__"/></td>
    </tr>
  </table>

  <div class="buttons">
    <input type="submit" class="button" name="DELETE"
           value="Delete time period"
           i18n:attributes="value" />
    <input type="submit" class="button" name="ADD"
           value="Add time period"
           i18n:attributes="value" />
  </div>

</form>

</metal:block>
</body>
</html>
