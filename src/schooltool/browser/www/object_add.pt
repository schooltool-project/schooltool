<html metal:use-macro="view/macros/page" i18n:domain="schooltool">
<head>
  <title metal:fill-slot="title" tal:content="view/title">Add object</title>
</head>
<body>

<h1 metal:fill-slot="h1" tal:content="view/title">Add object</h1>

<metal:block metal:fill-slot="content">

  <form class="standalone" method="POST" tal:attributes="action request/path"
        metal:define-macro="object_add_form">
    <fieldset>
    <input tal:condition="view/parent" type="hidden" name="parentgroup"
           tal:attributes="value view/parent/__name__" />
    <div class="error" tal:condition="view/error" tal:content="view/error" />
    <div class="row">
      <label class="wide" for="title" i18n:translate="">Title</label>
      <input id="title" name="title" type="text"
             tal:attributes="value view/prev_title">
    </div>
    <div class="row">
      <label class="wide" for="name" i18n:translate="">Identifier (optional)</label>
      <input id="name" name="name" type="text"
             tal:attributes="value view/prev_name">
    </div>
    <metal:block define-slot="extra_fields" />
    </fieldset>
    <div class="controls" tal:condition="view/duplicate_warning">
      <input class="button-ok" type="submit" name="CONFIRM" value="Add anyway"
             i18n:attributes="value" />
      <input class="button-cancel" type="submit" name="CANCEL" value="Cancel"
             i18n:attributes="value" />
    </div>
    <div class="controls" tal:condition="not: view/duplicate_warning">
      <input class="button-ok" type="submit" name="ADD" value="Add"
             i18n:attributes="value" />
    </div>
  </form>

</metal:block>
</body>
</html>
