<html metal:use-macro="view/macros/page" i18n:domain="schooltool">
<head>
  <title metal:fill-slot="title" tal:content="view/index_title">Contents</title>
</head>
<body>

<h1 metal:fill-slot="h1" tal:content="view/index_title">Contents</h1>

<metal:block metal:fill-slot="content">

  <!-- TODO: links, breadcrumbs -->

  <ul>
    <li tal:repeat="obj view/sortedObjects">
      <a tal:content="obj/title"
         tal:attributes="href obj/@@absolute_url">Some Object</a>
    </li>
  </ul>

  <p tal:condition="view/isManager">
    <a class="action"
       tal:attributes="href string:${context/@@absolute_url}/add.html"
       tal:content="view/add_title">Add new</a>
  </p>

</metal:block>
</body>
</html>
