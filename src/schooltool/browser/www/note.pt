<html metal:use-macro="view/macros/page" i18n:domain="schooltool">
    <head>
        <title metal:fill-slot="title" i18n:translate="">
            Note: <span tal:replace="context/title" i18n:name="title"/>
        </title>
    </head>

    <body>
        <h1 metal:fill-slot="h1" i18n:translate="">
            Note: <span tal:replace="context/title" i18n:name="title"/>
        </h1>

        <metal:block metal:fill-slot="content">

            <div class="note">
                <div class="content"
                    tal:content="context/body">Note Body</div>

                <a href="" tal:attributes="href context/url"
                    i18n:translate="">Refers to...</a>
            </div>

        </metal:block>
    </body>
</html>
