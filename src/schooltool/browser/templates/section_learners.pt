<tal:defs define="update view/update" />
<html metal:use-macro="view/@@standard_macros/page" i18n:domain="schooltool">
<head>
  <metal:slot fill-slot="title" tal:content="context/title" />
</head>
<body>
<metal:block metal:fill-slot="body"
             tal:define="possible_learners view/getPotentialLearners">

<form method="post" tal:attributes="action request/URL" class="standalone">
<h3 i18n:translate="">
  Students
</h3>
<p tal:condition="not:possible_learners" i18n:translate="">
  There are none.
</p>
<fieldset tal:condition="possible_learners">
  <div class="learner_list">
    <div tal:repeat="learner possible_learners/sortby:title">
      <label>
        <input tal:attributes="name string:member.${learner/__name__};
                               checked python:learner in context.members"
               type="checkbox" />
        <span tal:replace="learner/title" />
    </label>
    </div>
  </div>
</fieldset>

<div class="controls">
  <input type="submit" class="button-ok" name="UPDATE_SUBMIT" value="Apply"
         tal:condition="possible_learners"
         title="Shortcut: Alt-A" accesskey="A"
         i18n:attributes="value submit-button; accesskey" />
  <input type="submit" class="button-cancel" name="CANCEL" value="Cancel"
         i18n:attributes="value cancel-button" />
</div>
</form>

</metal:block>
</body>
</html>
