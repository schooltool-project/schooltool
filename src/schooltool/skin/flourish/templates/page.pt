<div>

<div class="refine"
     tal:content="structure view/providers/page_refine|nothing">
  [Refine content blocks]
</div>

<div class="container">
  <div class="main"
       tal:define="main_content view/content_template|nothing"
       tal:condition="main_content">
    <div class="content">
      <div class="header"
           tal:define="actions context/schooltool:content/actions|nothing"
           tal:condition="actions"
           tal:content="structure actions">
        [action] [buttons]
      </div>
      <div class="body" tal:content="structure main_content">
        [ Main content here ]
      </div>
    </div>
  </div>
  <div class="additional"
       tal:define="additional view/providers/page_content|nothing"
       tal:content="structure additional"
       tal:condition="additional">
    [Additional content blocks]
  </div>
</div>

<div class="related"
     tal:content="structure view/providers/page_related|nothing">
  [Related content blocks]
</div>

</div>
