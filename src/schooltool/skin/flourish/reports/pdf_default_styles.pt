<metal:block
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:metal="http://xml.zope.org/namespaces/metal"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="schooltool">

  <paraStyle
      name="bottom_bar.page_number"
      alignment="right"
      fontName="Ubuntu_Regular"
      spaceBefore="0"
      spaceAfter="0"
      tal:define="template python:view.manager.view.providers.get('template').viewlets[0]"
      tal:attributes="leading template/bottom_bar/height;
                      fontSize template/bottom_bar/fontSize;"
      />

  <blockTableStyle id="table">
    <blockFont start="0,0" stop="-1,0"
               name="Ubuntu_Bold" />
    <blockBackground start="0,0" stop="-1,-1"
                     colorsByRow="table.row.background,table.row-alt.background" />
  </blockTableStyle>

</metal:block>
