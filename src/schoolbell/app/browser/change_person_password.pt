<tal:defs define="dummy view/update" />
<html metal:use-macro="view/@@standard_macros/page" i18n:domain="schooltool">
<head>
  <title metal:fill-slot="title" i18n:translate="">Change password</title>
</head>
<body>
  <metal:nothing metal:fill-slot="h1" />
  <metal:block metal:fill-slot="body">

  <p tal:condition="context/hasPassword" i18n:translate="">The account for
    <span tal:replace="context/title" i18n:name="user" /> is
    <span class="accountenabled">enabled</span>.</p>

  <p tal:condition="not:context/hasPassword" i18n:translate="">The account for
    <span tal:replace="context/title" i18n:name="user" /> is
    <span class="accountdisabled">disabled</span>.  Enter a new password to
    enable it.</p>

  <form action="." method="POST" tal:attributes="action request/URL" class="standalone">
    <h3 i18n:translate="">
      Change password for <span tal:replace="context/title" i18n:name="user" />
    </h3>
    <div class="info" tal:condition="view/message" tal:content="view/message" />
    <div class="error" tal:condition="view/error" tal:content="view/error" />
    <div metal:use-macro="context/@@form_macros/widget_rows" />

    <div class="controls">
      <input class="button-ok" type="submit" name="UPDATE_SUBMIT" value="Change password"
             title="Shortcut: Alt-C" accesskey="C"
             i18n:attributes="value; title; accesskey" />
      <input tal:condition="context/hasPassword" class="button-cancel"
             type="submit" name="UPDATE_DISABLE" value="Disable account"
             i18n:attributes="value" />
    </div>
  </form>

  </metal:block>
</body>
</html>
