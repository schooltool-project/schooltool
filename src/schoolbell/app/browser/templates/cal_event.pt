<div class="calevent" i18n:domain="schooltool">
  <div class="dellink" tal:condition="view/canEdit">
    <a tal:attributes="href view/deleteLink" i18n:translate="">[delete]</a>
  </div>
  <h3 tal:condition="view/canView">
    <a tal:attributes="href view/editLink" tal:omit-tag="not:view/canEdit"
       tal:content="context/title">event_title</a>
  </h3><h3 tal:condition="not:view/canView">Busy</h3>
  <span tal:replace="structure view/duration" />
  <span tal:condition="python: context.location and view.canView()"
        tal:replace="string:(${context/location})" />
</div>
