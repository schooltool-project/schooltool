<html metal:use-macro="view/@@standard_macros/page" i18n:domain="schooltool">
<head>
  <title metal:fill-slot="title" tal:content="context/title" />
</head>
<body>
<h1 metal:fill-slot="h1"><span tal:replace="context/title" /></h1>
<metal:block metal:fill-slot="body">

  <div class="timetables">
    <h3 i18n:translate="">Calendar XXX NOT IMPLEMENTED</h3>
     <p><a tal:attributes="href string:${context/@@absolute_url}/calendar"
           i18n:translate="">Use calendar for this group</a></p>

    <div>
      <h3 i18n:translate="">Access control XXX NOT IMPLEMENTED</h3>
       <ul>
       <li><a tal:attributes="href string:${context/@@absolute_url}/acl.html"
             i18n:translate="">Set who can add/remove members<br/>and
             teachers of this group.</a></li>
       <li><a tal:attributes="href
             string:${context/@@absolute_url}/calendar/acl.html"
             i18n:translate="">Set who can view, edit, and add<br/>
             events to the calendar of this group.</a></li>
       </ul>
    </div>
  </div>

  <div class="members">
    <div class="actions"  tal:condition="view/canEdit">
      <a class="action"
     tal:attributes="href string:${context/@@absolute_url}/edit.html"
         i18n:translate="">Edit</a>
    </div>
    <div tal:define="members view/getPersons">
      <h3 i18n:translate="">Members</h3>
      <div tal:repeat="obj members"> <!-- XXX sort order? -->
        <a tal:attributes="href obj/@@absolute_url" tal:content="obj/title" />
      </div>
      <p tal:condition="not:members" i18n:translate="">
        This group has no members.</p>
    </div>
    <div tal:define="resources view/getResources"
         tal:condition="resources">
      <tal:comment condition="nothing">
        <!-- The resource section is hidden altogether when there are no
             resources as members - I presume that many groups will not
             have resources as members. -->
      </tal:comment>
      <h3 i18n:translate="">Resources</h3>
      <div tal:repeat="resource resources">
        <a tal:attributes="href resource/@@absolute_url"
           tal:content="resource/title" />
      </div>
    </div>

    <br />
    <div class="actions" tal:condition="view/canEdit">
      <div><a class="action"
         tal:attributes="href string:${context/@@absolute_url}/members_persons.html"
         i18n:translate="">Add / remove a person</a></div>
      <div><a class="action"
         tal:attributes="href string:${context/@@absolute_url}/members_resources.html"
         i18n:translate="">Add / remove a resource</a></div>
    </div>
  </div>

</metal:block>
</body>
</html>
