<tal:defs define="update view/update" />
<html metal:use-macro="view/@@standard_macros/page" i18n:domain="schooltool">
<head>
  <title metal:fill-slot="title" tal:content="context/title" />
</head>
<body>
<h1 metal:fill-slot="h1" i18n:translate="">
  Members of <span i18n:name="title" tal:replace="context/title" />
</h1>
<metal:block metal:fill-slot="body"
             tal:define="possible_members view/getMemberList">

<form method="POST" tal:attributes="action request/URL">
<p tal:condition="not:possible_members">
  There are none.
</p>
<div class="member_list" tal:condition="possible_members">
  <!-- TODO: nice CSS -->
  <div tal:repeat="member possible_members/sortby:title">
    <label>
      <input tal:attributes="name string:member.${member/__name__};
                             checked python:member in context.members"
             type="checkbox" />
      <span tal:replace="member/title" />
    </label>
  </div>
</div>

<div class="controls">
  <input class="button-ok" type="submit" name="APPLY"
         tal:condition="possible_members"
         value="Apply" title="Shortcut: Alt-A" accesskey="A"
         i18n:attributes="value; title; accesskey" />
  <input class="button-cancel" type="submit" name="CANCEL"
         value="Cancel" i18n:attributes="value" />
</div>
</form>

</metal:block>
</body>
</html>
