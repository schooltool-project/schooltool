<html metal:use-macro="view/@@standard_macros/page" i18n:domain="schooltool">
<head>
  <title metal:fill-slot="title" i18n:translate="">Person info</title>
</head>
<body>
  <h1 metal:fill-slot="content-header" i18n:translate="">
    <span tal:replace="context/title" i18n:name="title"/>
  </h1>
<metal:block metal:fill-slot="body">
  <div class="row">
    <strong i18n:translate="">Username:</strong>
    <span tal:replace="context/zope:name">not_doe</span>
  </div>
  <div class="row">
    <strong i18n:translate="">Title:</strong>
    <span tal:replace="context/title">John, but not Doe</span>
  </div>
  <div class="row">
    <strong i18n:translate="">Photo:</strong>
    <tal:block condition="not:context/photo"
               i18n:translate="">N/A</tal:block>
    <p tal:condition="context/photo">
      <img src="photo"
           tal:attributes="src string:${context/@@absolute_url}/photo" />
    </p>
  </div>

  <div class="groups" tal:define="groups context/groups/sortby:title">
    <h3 i18n:translate="">Groups</h3>
    <ul>
      <li tal:repeat="group groups">
        <a tal:attributes="href group/@@absolute_url"
           tal:content="group/title"></a>
      </li>
    </ul>
    <div tal:condition="not:groups" i18n:translate="">
      This person does not belong to any groups.
    </div>
  </div>

</metal:block>
</body>
</html>
