<html metal:use-macro="view/@@standard_macros/page" i18n:domain="schooltool">
<head>
  <title metal:fill-slot="title" i18n:translate="">Resource info</title>
</head>
<body>
<h1 metal:fill-slot="content-header" i18n:translate="">Resource info</h1>
<metal:block metal:fill-slot="body">

  <p class="description" tal:content="context/description"/>

  <div class="row">
    <strong i18n:translate="">Identifier:</strong>
    <span tal:replace="context/zope:name">res123</span>
  </div>
  <div class="row">
    <strong i18n:translate="">Title:</strong>
    <span tal:replace="context/title">Resource title</span>
  </div>

  <div class="groups" tal:define="groups context/groups">
    <h3 i18n:translate="">Groups</h3>
    <ul>
      <li tal:repeat="group groups/sortby:title">
        <a tal:attributes="href group/@@absolute_url"
           tal:content="group/title">Title</a>
      </li>
    </ul>
    <div tal:condition="not:groups" i18n:translate="">
      This resource does not belong to any groups.
    </div>
  </div>

</metal:block>
</body>
</html>
